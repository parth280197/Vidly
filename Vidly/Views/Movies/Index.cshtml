@using Vidly.Models
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
@Html.ActionLink("Add Movie","Save","Movies",new {@class="btn btn-success"})
<table id="movies" class="table table-striped">
  <thead>
    <tr>
      <th>
        Movie
      </th>
      <th>
        Generes
      </th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
@section scripts{
  <script>
    $(document).ready(function () {
      var table = $("#movies").DataTable({
        "ajax": {
          url: "/api/movies",
          dataSrc:""
        },
        columns: [
          {
            data:"name"
          },
          {
            data:"genreId"
          }
        ]
      });
    })
  </script>
  }

